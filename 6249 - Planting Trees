#include <iostream>
#include <algorithm>
using namespace std;
bool compare(int a, int b) {
    return a > b; 
}
int main(){
    int n;
    cin >> n;
    int* arr = new int[n];
    for (int i = 0; i < n; ++i) cin >> arr[i];
    sort(arr, arr + n, compare);
    int sum = 0, max = 0;
    for (int i = 0; i < n; ++i){
        arr[i] += (i + 1);
        if (max < arr[i]) max = arr[i];
    }
    cout << ++max;
    return 0;
}
